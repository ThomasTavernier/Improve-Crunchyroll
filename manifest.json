{
  "manifest_version": 2,
  "version": "4.0.0",
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "author": "Thomas Tavernier <thomas@tavernier.dev>",
  "default_locale": "en",
  "icons": {
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage",
    "https://*.crunchyroll.com/*"
  ],
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://static.crunchyroll.com/vilos-v2/web/vilos/player.html*"
      ],
      "js": [
        "shared/chromeStorage.js",
        "content/js/crunchyrollVideoPlayerV2.js",
        "shared/shortcutUtils.js"
      ],
      "css": [
        "content/css/crunchyrollVideoPlayer2.css"
      ],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://beta.crunchyroll.com/*",
        "https://www.crunchyroll.com/*"
      ],
      "js": [
        "shared/chromeStorage.js",
        "content/js/api.js",
        "content/js/action-menu.js",
        "content/js/empty.js",
        "content/js/series.js",
        "content/js/watch.js",
        "content/js/main.js"
      ],
      "css": [
        "shared/theme-color.css",
        "content/css/main.css",
        "content/css/action-menu.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "resources/*"
  ]
}
